<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.General.AcademicActivity"
    android:background="@drawable/gradientback"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/txt"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Academic Calendar:"

        android:textSize="30dp"
        android:textColor="#291F4E"
        android:textStyle="bold"></TextView>
    <ImageView
        android:layout_below="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:padding="10dp"
        android:background="#DCC09292"
        android:src="@drawable/academic"></ImageView>


</RelativeLayout>