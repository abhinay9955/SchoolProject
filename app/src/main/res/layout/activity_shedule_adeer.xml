<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Administrator.SheduleAdeerActivity"
    android:orientation="vertical"
    android:background="@drawable/gradientback"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:textColor="#EED6D6"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="right"

            android:text="TutorID:"></TextView>
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/su_tid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="214567"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Name :"></TextView>
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/su_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Abhinay chamar"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18dp"></TextView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp">


    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout

        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:padding="10dp"
            android:hint="class"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Class :"></TextView>
        <EditText
            android:textColor="#ffffff"
            android:id="@+id/ism_class"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Class"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_weight="1"
            android:textSize="18dp"></EditText>
    </LinearLayout>
    <LinearLayout

        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Period:"></TextView>
        <EditText
            android:textColor="#ffffff"
            android:id="@+id/ism_period"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center_vertical"
            android:hint="Period"
            android:layout_weight="1"
            android:textSize="18dp"></EditText>
    </LinearLayout>
    <LinearLayout

        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="16dp"

            android:textStyle="bold"
            android:text="Subject :"></TextView>
        <EditText
            android:textColor="#ffffff"

            android:id="@+id/ism_subject"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Subject"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18dp"></EditText>
    </LinearLayout>
    <Button
        android:id="@+id/su_add_button"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textColor="#ffffff"

        android:textStyle="bold"
        android:text="  ADD SCHEDULE  "

        android:gravity="center"
        android:background="@drawable/gradientback3"

        android:padding="2dp"
        ></Button>



</LinearLayout>