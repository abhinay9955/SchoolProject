<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/borderbox"
    android:id="@+id/card"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Name"></TextView>
        <TextView
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Class "></TextView>
        <TextView
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:id="@+id/std"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="A404"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Roll NO. "></TextView>
        <TextView
            android:textColor="#ffffff"

            android:id="@+id/roll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="1.5 hours"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Parent   :"></TextView>
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/parent"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="15-Feb-2020 6:32 pm"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18dp"></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/fill_data_child"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/gradientback3"

        android:gravity="center"
        android:padding="2dp"

        android:text=" FILL DATA "
        android:textColor="#ffffff"

        android:textStyle="bold"></Button>


</LinearLayout>