<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:elevation="8dp"



    app:cardCornerRadius="13dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderbox"
        android:orientation="vertical"
       >
    <LinearLayout

        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Parent :"></TextView>
        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/tapp_parentname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ABHINAY BARNWAL"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18dp"></TextView>
    </LinearLayout>
        <LinearLayout

            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:padding="10dp"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Contact :"></TextView>
            <TextView
                android:textColor="#FFFFFF"
                android:id="@+id/tapp_parentcontact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="876345666"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="18dp"></TextView>
        </LinearLayout>
        <LinearLayout

            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="Time :"></TextView>
            <TextView
                android:textColor="#FFFFFF"
                android:id="@+id/tapp_timing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="20-02-20 16:30"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="18dp"></TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>