<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/borderbox"
    android:layout_margin="15dp"
    android:padding="10dp">

    android:layout_margin="17dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:textColor="#EED6D6"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="right"

            android:text="TutorID:"></TextView>
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/su_tid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="214567"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18dp"></TextView>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:textColor="#ffffff"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Name"></TextView>
            <TextView
                android:textColor="#ffffff"
                android:id="@+id/su_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Abhinay chamar"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="18dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:textColor="#ffffff"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Contact"></TextView>
            <TextView
                android:textColor="#ffffff"
                android:id="@+id/su_contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="20181001"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="18dp"></TextView>


        </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/su_add_button"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textColor="#ffffff"

            android:textStyle="bold"
            android:text="  ADD SCHEDULE  "

            android:gravity="center"
            android:background="@drawable/gradientback3"

            android:padding="2dp"
            ></Button>

    </LinearLayout>


    </LinearLayout>

</LinearLayout>