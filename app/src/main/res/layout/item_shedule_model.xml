<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:backgroundTint="#CB2CCAB3"
    android:layout_margin="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:background="@drawable/borderbox"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Class :"></TextView>
            <TextView
                android:textColor="#030303"
                android:id="@+id/ism_class"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="VI"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_weight="1"
                android:textSize="18dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/borderbox"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Period:"></TextView>
            <TextView
                android:textColor="#000000"
                android:id="@+id/ism_period"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6th"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="18dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/borderbox"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Subject :"></TextView>
            <TextView
                android:textColor="#000000"
                android:id="@+id/ism_subject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Maths"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="18dp"></TextView>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>